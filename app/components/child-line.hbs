

<div class="gantt-line">
   <div class="gantt-line-title ember-view">                 
      <span>
        <svg width="12px" height="12px"><circle fill={{@job.color}} cx="5" cy="6" r="5" width="9" height="9"></circle></svg>
           {{@job.title}}
      </span>
   </div>
   <div class="gantt-line-timeline">
       <div class="gantt-line-bar" style={{this.barStyle}} >
            <LineInlineChilds   @job={{@job}} @chart={{@chart}} @parentLine={{@parentLine}} @style={{this.barStyle}} @title={{this.barTitle}}  />
	    
	    <div class="gantt-line-bar-content ember-view">{{@job.title}}</div>
            <div class="bar-resize-l"></div>
            <div class="bar-resize-r"></div>
      </div>
   </div>
</div>


